<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wallet.Views.ScanPage"
             xmlns:vm="clr-namespace:Wallet.ViewModels;"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Button Text="Scan QR Code"  
                x:Name="ButtonScan"  
                Clicked="ButtonScan_Clicked"/>
            <Entry x:Name="TxtBarcode"  
               Placeholder="Text Do scan"/>
            <Entry x:Name="TxtAmount"  
               Placeholder="price"/>
            <Button Text="Pay"  
                x:Name="ButtonPay"  
                Clicked="ButtonPay_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>